<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.m1noon.playinganimationbar.PlayingAnimationBar
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <com.m1noon.playinganimationbar.PlayingAnimationBar
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            app:pab_bottomColor="@color/app_red"
            app:pab_margin="2dp"
            app:pab_topColor="@color/app_orange" />

        <com.m1noon.playinganimationbar.PlayingAnimationBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            app:pab_barCount="5" />

        <com.m1noon.playinganimationbar.PlayingAnimationBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            app:pab_duration="1000" />

        <com.m1noon.playinganimationbar.PlayingAnimationBar
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            app:pab_alphaInflexionEnable="false" />

        <com.m1noon.playinganimationbar.PlayingAnimationBar
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            app:pab_barCount="6"
            app:pab_bottomColor="@color/app_blue"
            app:pab_duration="2000"
            app:pab_fps="36"
            app:pab_margin="8dp"
            app:pab_topColor="@color/app_cyan" />

    </LinearLayout>
</ScrollView>